<!DOCTYPE web-app PUBLIC 
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">
 
 <web-app>
 
 	<servlet>
 		<servlet-name>login</servlet-name>
 		<servlet-class>com.encora.test.LoginServlet</servlet-class>
 	</servlet>
 	
 	<servlet>
 		<servlet-name>welcome</servlet-name>
 		<servlet-class>com.encora.test.WelcomeServlet</servlet-class>
 	</servlet>
 	
 	<servlet>
 		<servlet-name>life</servlet-name>
 		<servlet-class>com.encora.test.LifeCycleServlet</servlet-class>
 		<load-on-startup>1</load-on-startup>
 	</servlet>
 	
 	<servlet-mapping>
 		<servlet-name>login</servlet-name>
 		<url-pattern>/auth.php</url-pattern>
 	</servlet-mapping>
 	<servlet-mapping>
 		<servlet-name>welcome</servlet-name>
 		<url-pattern>/welcome.php</url-pattern>
 	</servlet-mapping>
 	<servlet-mapping>
 		<servlet-name>life</servlet-name>
 		<url-pattern>/life.jsp</url-pattern>
 	</servlet-mapping>
 	
 </web-app>